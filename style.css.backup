/* Top Navigation */
.top-nav {
    background: var(--dark-bg);
    padding: 0.5rem 1.5rem;
    border-bottom: 1px solid rgba(0, 243, 255, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 1000;
    transition: var(--transition);
}

.theme-switcher {
    display: flex;
    gap: 0.75rem;
    padding: 0.5rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 50px;
    backdrop-filter: blur(10px);
}

.theme-btn {
    width: 25px;
    height: 25px;
    border-radius: 50%;
    border: 2px solid transparent;
    cursor: pointer;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.theme-btn:focus {
    outline: none;
    border-color: white;
    transform: scale(1.1);
}

.theme-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: currentColor;
    border-radius: 50%;
    transition: var(--transition);
}

.theme-btn:hover {
    transform: scale(1.1);
}

